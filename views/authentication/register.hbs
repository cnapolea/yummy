<form
  action='/authentication/register'
  method='POST'
  enctype='multipart/form-data'
  class='centering-container'
>

  <label for='input-first-name'>First Name</label>
  <input
    type='text'
    id='input-first-name'
    name='firstName'
    placeholder='Your First Name'
    required
  />

  <label for='input-last-name'>Last Name</label>
  <input
    type='text'
    id='input-last-name'
    name='lastName'
    placeholder='Your Last Name'
    required
  />

  <label for='input-email'>Email</label>
  <input
    type='email'
    id='input-email'
    name='email'
    placeholder='Your Email'
    required
  />

  <label for='input-phone'>Phone number</label>
  <input
    type='tel'
    id='input-phone'
    name='phoneNumber'
    placeholder='Your Phone Number'
  />

  <label for='input-password'>Password</label>
  <input
    type='password'
    id='input-password'
    name='password'
    placeholder='A Strong Password'
    required
    minlength='5'
  />

  <label for='input-picture'>Profile Picture</label>
  <input
    id='input-picture'
    type='file'
    name='profilePicture'
    accept='image/*'
  />

  <button>Join the Yummy Community</button>
</form>