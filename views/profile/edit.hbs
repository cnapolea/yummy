<h1>{{user.name.firstName}}'s Profile</h1>

<form class='btn-delete' action='/profile/{{user._id}}/delete'>
  <button class='btn-pink'>Delete Profile</button>
</form>

<form action='/profile/{{user._id}}/edit' method='POST'>

  <label for='input-first-name'>First Name</label>
  <input
    type='text'
    id='input-first-name'
    name='firstName'
    value='{{user.name.firstName}}'
    placeholder='Your First Name'
    required
  />

  <label for='input-last-name'>Last Name</label>
  <input
    type='text'
    id='input-last-name'
    name='lastName'
    value='{{user.name.lastName}}'
    placeholder='Your Last Name'
    required
  />

  <label for='input-email'>Email</label>
  <input
    type='email'
    id='input-email'
    name='email'
    value='{{user.email}}'
    placeholder='Your Email'
    required
  />

  <label for='input-phone'>Phone number</label>
  <input
    type='tel'
    id='input-phone'
    name='phoneNumber'
    value='{{user.phoneNumber}}'
    placeholder='Your Phone Number'
  />
  <button class='btn-pink'>Save Changes</button>
</form>

<form action='/profile/{{user._id}}'><button>Cancel</button></form>